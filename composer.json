{
  "name": "nplesa/observer",
  "description": "Just another Laravel Observer component",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.7",
    "laravel/reverb": "^1.0",
    "livewire/livewire": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "nplesa\\Observer\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "nplesa\\Observer\\ObserverServiceProvider"
      ]
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php artisan vendor:publish --provider=\"nplesa\\Observer\\ObserverServiceProvider\" --tag=config",
      "@php artisan migrate --force"
    ]
  }
}
